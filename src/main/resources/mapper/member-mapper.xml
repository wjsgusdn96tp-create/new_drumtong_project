<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="kr.co.iei.member.model.dao.MemberDao">
	<!-- 회원가입 -->
	<insert id="insertMember">
		insert into member_tbl values(member_seq.nextval, #{memberEmail}, #{memberNickname}, #{memberPw}, '회원')
	</insert>
	
	<!-- 로그인 -->
	<select id="selectOneMember" resultType="member">
		select * from member_tbl where member_email = #{memberEmail}
	</select>
	
	<!-- 정보수정 -->
	<update id="updateMember">
		update member_tbl 
		set
		member_pw = #{memberPw}
		where member_email = #{memberEmail}
	</update>
	
	<!-- 회원탈퇴 -->
	<delete id="deleteMember">
		delete from member_tbl where member_no = #{memberNo}
	</delete>
	
	<!-- 관리자 페이지(회원 전체 조회) -->
	<select id="selectAllMember" resultType="member">
		select * from member_tbl order by 1
	</select>
	
	<!-- 맴버쉽 변경 -->
	<update id="changeMemberGrade">
		update member_tbl set member_grade = #{memberGrade} where member_no = #{memberNo}
	</update>
	
	<!-- 비밀번호 재설정 -->
	<update id="updatePasswordByEmail">
    	update member_tbl
    	set
        member_pw = #{newPassword}
     	where member_email = #{memberEmail}
  </update>
</mapper>
