<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="kr.co.iei.product.dao.ProductDao">
  <insert id="productInsertDrink">
  	insert into product_tbl values(
  								product_seq.nextval, 
  								#{productName}, 
  								#{productPrice}, 
  								#{productTitle}, 
  								#{productTilteTemp}, 
  								#{productTitleDetail},
  								#{productContentPresent},
  								#{productContentKcal},
  								#{productContentShot},
  								#{productContentSugar},
  								#{productContentNatrium},
  								#{productContentProtein},
  								#{productImg})
  </insert>
  
  <select id="productInsertSearch" resultType="product">
  	select * from product_tbl where product_name=#{productName}
  </select>
  
  <insert id="productBestTblInsert">
  	insert into product_best_tbl values(product_best_seq.nextval, #{productNo}, #{productName})
  </insert>
  
  <delete id="productInsertDelete">
  	delete from product_tbl where product_name=#{productName}
  </delete>
  
  <select id="selectProductTotalCount">
  	select count(*) from product_tbl
  </select>
  
  <select id="selectProductList">
  	select * from 
    		(select rownum as rnum, n.* from 
        		(select 
            		* 
       			 from product_tbl order by product_no desc
       			 )n
       		)
		where rnum between #{start} and #{end}
  </select>
</mapper>
